@model AdvertismentTask.Models.User
@{
    var error = ViewBag.Error;
}
<h2>Добавление пользователя</h2>
@if(!string.IsNullOrEmpty(error))
{
    <h2 class="alert-danger" style="padding:20px">@error</h2>
}
<form asp-action="registr" asp-controller="registr" method="post">
    <p>
        <label asp-for="Name">Имя</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="Email">Почта</label><br />
        <input type="text" asp-for="Email" />
    </p>
    <p>
        <label asp-for="Password">Пароль</label><br />
        <input type="password" asp-for="Password" />
    </p>
    <p>
        <input type="submit" value="Отправить" />
    </p>
</form>